<h2>Contact me</h2>

{{#if isSent}}
  <div class='isSent'>
    Your message has been sent. <br>
    File {{ projectFileName }} has been uploaded.
  </div>
{{/if}}

{{#if isError}}
  <div class='isError'>
    You can't leave fields empty!
  </div>
{{/if}}

<form action='/contact/send-message' method='POST' enctype='multipart/form-data'>
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project desing: <input type="file" name="projectFile" accept="image/jpg, image/jpeg, image/png, image/gif">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>
